<p id="notice"><%= notice %></p>

<h1>Buy Options</h1>

<table>
  <thead>
    <tr>
      <th>Material</th>
      <th>Company name</th>
      <th>Price</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buy_options.each do |buy_option| %>
      <tr>
        <td><%= buy_option.material_id %></td>
        <td><%= buy_option.company_name %></td>
        <td><%= buy_option.price %></td>
        <td><%= buy_option.date %></td>
        <td><%= link_to 'Show', buy_option %></td>
        <td><%= link_to 'Edit', edit_buy_option_path(buy_option) %></td>
        <td><%= link_to 'Destroy', buy_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

